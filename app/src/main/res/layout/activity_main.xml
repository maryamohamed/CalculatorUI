<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ShapeHeight"
        android:background="@drawable/background"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/CalculatorTextSize"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:layout_margin="@dimen/CalculatorMargin"
            android:text="@string/calculatorText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/Result"
            android:textSize="@dimen/ResultTextSize"
            android:layout_marginTop="@dimen/ResultMarginTop"
            android:layout_marginEnd="@dimen/ResultMarginEnd"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/SecondLinearLayoutHeight"
        android:padding="@dimen/SecondLinearLayoutPadding"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/WatchIconWidthAndHeight"
            android:layout_height="@dimen/WatchIconWidthAndHeight"
            style="@style/Watch_Scan_Icon"
            android:src="@drawable/outline_watch_later_24"/>

        <ImageView
            android:layout_width="@dimen/ScanIconWidthAndHeight"
            android:layout_height="@dimen/ScanIconWidthAndHeight"
            style="@style/Watch_Scan_Icon"
            android:src="@drawable/scan_o_svgrepo_com" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/ValuesHeight"
            android:layout_gravity="end"
            android:paddingTop="@dimen/ValuesPaddingTop"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/Values"
            android:textColor="@color/black"
            android:textSize="@dimen/ValuesTextSize" />


    </LinearLayout>
    <LinearLayout
        style="@style/LinearlayoutForCalculatorRows"
        android:weightSum="4">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/RectanglesWidthAndHeight"
            android:layout_weight="1"
            android:src="@drawable/three_dots_svgrepo_com"
            android:background="@drawable/rectangle"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/c"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/mod" />

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="/" />
    </LinearLayout>
    <LinearLayout
        style="@style/LinearlayoutForCalculatorRows"
        android:weightSum="4">
        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/one"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/two"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/three"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="x"/>
    </LinearLayout>
    <LinearLayout
        style="@style/LinearlayoutForCalculatorRows"
        android:weightSum="4">
        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/four"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/five" />

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/six" />

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/minus"/>
    </LinearLayout>
    <LinearLayout
        style="@style/LinearlayoutForCalculatorRows"
        android:weightSum="4">
        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/seven"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/eight"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/nine"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/plus"/>
    </LinearLayout>
    <LinearLayout
        style="@style/LinearlayoutForCalculatorRows"
        android:weightSum="3">
        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/zero"/>

        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/dot"/>


        <View style="@style/ViewForSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/RectangleContent"
            android:text="@string/equal"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
