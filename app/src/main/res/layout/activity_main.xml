<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/background"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:layout_margin="15dp"
            android:text="Calculator"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="30"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/white"
            android:textSize="48sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:drawableStart="@drawable/outline_watch_later_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:drawableStart="@drawable/scan_o_svgrepo_com" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="65-48+13"
            android:textColor="@color/black"
            android:textSize="24sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="4"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_weight="1"
            android:src="@drawable/three_dots_svgrepo_com"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="C"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="4"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="x"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="4"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="bold"            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="4"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="24sp"
            android:textStyle="bold"            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
            android:layout_height="60dp"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
